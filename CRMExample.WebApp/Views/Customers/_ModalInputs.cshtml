@model ModalInputViewModel

<p class="text-sm">
    @Model.Description
</p>
<div class="input-group input-group-outline my-3">
    <label class="form-label">Ad Soyad / Şirket Adı</label>
    <input id="name" type="text" class="form-control" @(Model.IsReadonly ? "readonly" : "")>
</div>
<div class="input-group input-group-outline my-3">
    <label class="form-label">E-posta</label>
    <input id="email" type="email" class="form-control" @(Model.IsReadonly ? "readonly" : "")>
</div>
<div class="input-group input-group-outline my-3">
    <label class="form-label">Telefon</label>
    <input id="phone" type="tel" class="form-control" @(Model.IsReadonly ? "readonly" : "")>
</div>
<div class="form-check my-3">
    <input class="form-check-input" type="checkbox" id="iscorporate" @(Model.IsReadonly ? "disabled" : "")>
    <label class="custom-control-label" for="customCheck1">Kurumsal</label>
</div>
<div class="form-check my-3">
    <input class="form-check-input" type="checkbox" id="islocked" @(Model.IsReadonly ? "disabled" : "")>
    <label class="custom-control-label" for="customCheck1">Pasif</label>
</div>
<div class="input-group input-group-outline my-3">
    <label class="form-label">Açıklama</label>
    <textarea id="desc" cols="30" rows="2" class="form-control" @(Model.IsReadonly ? "readonly" : "")></textarea>
</div>
@if (Model.HasId) { 
<input type="hidden" id="clientid" value="" />
}